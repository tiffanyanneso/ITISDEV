<!DOCTYPE html>
<html>
    <head>
        <title> Manager Dashboard </title>
        <meta name="description" content="Dashboard">
        <meta name="keyword" content="Dashboard">
        <link rel="stylesheet" type="text/css" href="../css/dashboard.css">
        <link rel="stylesheet" type="text/css" href="../css/general.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        
    </head>
    <body>

        <!-- PARTIALS -->
        {{> logoutPartial }}

        <div class="dashboard-content">
            <h1 style="text-align: center;"> Welcome, {{name}}!</h1>

            <div class="options-format">
 
                <!-- INVENTORY & PURCHASING DASHBOARD -->
                <div class="options">
                    <div class="column"><button type="button" value ="viewSalesReport">View Sales Report</button></div>
                    <div class="column"><button type="button" value ="viewInventoryReport" >View Inventory Report</button></div>
                    <div class="column"><button type="button" value ="#" >Add New Dish</button></div>
                </div>
                <div class="options">
                    <div class="column"><button type="button" value ="#">View Inventory</button></div>
                    <div class="column"><button type="button" value ="#">View Purchases</button></div>
                    <div class="column"><button type="button" value="#">View Order History</button></div>
                </div>
                   <div class="options">
                    <div class="column"><button type="button" value ="#">View Menu</button></div>
                    <div class="column"><button type="button" value ="#">Add Unit Conversion</button></div>
                </div>
    
             
            </div>
        </div>

        <script> 
            $(document).ready(function() {

                $("button").click(function() {
                     //alert('clicked!');
                     location.href = $(this).val();
                });
            })
        </script>

    </body>
</html>
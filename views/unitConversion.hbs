<!DOCTYPE html>
<html>
    <head>
        <title> Unit Converter </title>
        <meta name="description" content="Unit Converter">
        <meta name="keyword" content="View Purchase">
        <link rel="stylesheet" type="text/css" href="../css/general.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>

    <body>
        <h2>Add unit</h2>
            <label for="unit"><input type="text">
                

        <br><br><br>

        <h2>Add Conversion</h2>
        <label for="unitA">Unit A</label> 
        <select class="dropdown" id="unitA">
            <option value="no-selected">--Select unit--</option>
            {{#each unitNames}}
                <option value="{{id}}">{{unitName}}</option>
            {{/each}}
        </select>
                        <br>
        <label for="unitB">Unit B</label>
         <select class="dropdown" id="unitB">
            <option value="no-selected">--Select unit--</option>
            {{#each unitNames}}
                <option value="{{id}}">{{unitName}}</option>
            {{/each}}
        </select>
        <br>
        <p class="error" id="error-unit"></p>
        <label for="ratio">Ratio</label> <input type="number" id="ratio" style="margin-top: 5px; margin-bottom: 5px;"> <br>
        <p class="error" id="error-ratio"></p>
        <label for="dropdown-operator">Operator</label>
        <select class="dropdown" style="margin-top: 5px; margin-bottom: 5px;" id="operator">
            <option value="*">*</option>
            <option value="/">/</option>
        </select> <br> <br>
        <button id="save-unit" class="btn-light-blue" disabled="true">Save</button>

        <table>
            <tr>
                <th>Unit A</th>
                <th>Unit B</th>
                <th>Ratio</th>
                <th>Operator</th>
            </tr>
            <tbody>
                {{#each conversions}}
                <tr>
                    <td>{{unitA}}</td>
                    <td>{{unitB}}</td>
                    <td>{{ratio}}</td>
                    <td>{{operator}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <script>
            $(document).ready(function() {

                function checkSameUnit () {
                    var unitA = $('#unitA').val();
                    var unitB = $('#unitB').val();
                    if (unitA == unitB)
                        return true;
                    else
                        return false;
                }

                function isPositive() {
                    var ratio = $('#ratio').val();
                    if (ratio>0)
                        return true;
                    else
                        return false;
                }

                $('#unitA').keyup(function() {
                    //unit is same
                    if (checkSameUnit()) {
                        $("#unitA").css("border", "1px solid #B00000");
                        $('#error-unit').text('Cannot convert between same unit');
                        $("#save-unit").prop("disabled", true);
                        $("#save-unit").css("background-color", "#b3b3b3");
                    }   
                    else {
                        $("#unitA").css("border", "1px solid #DDDDDD");
                        $("#error-unit").text("");
                        $("#save-unit").prop("disabled", false);
                        $("#save-unit").css("background-color", "#0F84D9");
                    }
                })

                $('#unitB').keyup(function() {
                    //unit is same
                    if (checkSameUnit()) {
                        $("#unitB").css("border", "1px solid #B00000");
                        $('#error-unit').text('Cannot convert between same unit');
                        $("#save-unit").prop("disabled", true);
                        $("#save-unit").css("background-color", "#b3b3b3");
                    }
                    else {
                        $("#unitB").css("border", "1px solid #DDDDDD");
                        $("#error-unit").text("");
                        $("#save-unit").prop("disabled", false);
                        $("#save-unit").css("background-color", "#0F84D9");
                    }       
                })

                $('#ratio').keyup(function() {
                    //is not positive
                    if (!isPositive()) {
                        $("#ratio").css("border", "1px solid #B00000");
                        $('#error-ratio').text('Ratio cannot be less than 1');
                        $("#save-unit").prop("disabled", true);
                        $("#save-unit").css("background-color", "#b3b3b3");
                    }
                    else {
                        $("#ratio").css("border", "1px solid #DDDDDD");
                        $("#error-ratio").text("");
                        $("#save-unit").prop("disabled", false);
                        $("#save-unit").css("background-color", "#0F84D9");
                    }       
                })

                $('#save-unit').click(function(){
                    var unitA = $('#unitA').val();
                    var unitB = $('#unitB').val();
                    var ratio = $('#ratio').val();
                    var operator = $('#operator').val();
                    
                    $.post('/saveUnit', {unitA, unitB, ratio, operator});

                    $('#unitA').val('');
                    $('#unitB').val('');
                    $('#ratio').val('');
                    $('#operator').val('');
                })
            })
        </script>
    </body>

</html>